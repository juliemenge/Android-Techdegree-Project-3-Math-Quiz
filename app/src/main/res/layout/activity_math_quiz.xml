<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_math_quiz"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.juliemenge.mathquiz.MathQuizActivity">

    <TextView
        android:text="What is"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rightAdderTextView"
        android:layout_centerHorizontal="true"
        android:id="@+id/whatIsTextView"
        android:textSize="50sp"/>

    <Button
        android:text="SUBMIT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/submitButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="25dp"
        android:layout_above="@+id/resultsDisplayText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="23dp"
        android:id="@+id/radioButtonsGroup">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/leftAnswerOptionButton"
            android:gravity="center_vertical"
            android:text="Left Answer"
            android:layout_weight="1"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/middleAnswerOptionButton"
            android:elevation="13dp"
            android:text="Middle Answer"
            android:layout_weight="1"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rightAnswerOptionButton"
            android:text="Right Answer"
            android:layout_weight="1"/>
    </RadioGroup>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addersTextGroup"
        android:layout_below="@+id/whatIsTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp">

        <TextView
            android:text="12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/leftAdderTextView"
            android:layout_weight="1"
            android:textSize="50sp"/>

        <TextView
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/plusSignTextView"
            android:layout_weight="1"
            android:textSize="50sp"/>

        <TextView
            android:text="36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rightAdderTextView"
            android:layout_weight="1"
            android:textSize="50sp"/>
    </LinearLayout>

    <TextView
        android:text="Correct!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/submitButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp"
        android:id="@+id/resultsDisplayText"
        android:textSize="50sp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/answerOptionsTextGroup"
        android:layout_above="@+id/radioGroup3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="19dp"
        android:layout_marginTop="250dp">

        <TextView
            android:text="48"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/leftAnswerOptionTextView"
            android:layout_weight="1"
            android:textSize="40sp"/>

        <TextView
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/middleAnswerOptionTextView"
            android:layout_weight="1"
            android:textSize="40sp"/>

        <TextView
            android:text="15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rightAnswerOptionTextView"
            android:layout_weight="1"
            android:textSize="40sp"/>
    </LinearLayout>

</RelativeLayout>
